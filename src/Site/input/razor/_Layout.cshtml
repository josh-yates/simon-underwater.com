@using Site.Keys
<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Belgrano">
    <link rel="stylesheet" href="/styles/main.@(RazorKeys.CssBuildId).css">
    <title>@ViewBag.Title - Simon Yates Underwater Photography</title>
</head>

<body class="body">
    <header class="left-nav">
        <a class="left-nav__logo-link" href="/">
            <img class="logo-link__img" src="/assets/logo.png" />
        </a>
        <h1 class="left-nav__title"><a class="title__link" href="/">Simon Yates</a></h1>
        <span class="left-nav__description">Underwater photography</span>
        <nav class="left-nav__nav-links">
            <a class="nav-links__link link" href="/">Home</a>
            <a class="nav-links__link link" href="/photos/1">Photos</a>
            <a class="nav-links__link link" href="/about">About</a>
            <a class="nav-links__link link" href="/contact">Contact</a>
        </nav>
        <nav class="left-nav__footer">
            <a class="footer__link link" href="/privacy">Privacy</a>
            <aside class="footer__description">Built by <a class="link" href="https://github.com/josh-yates/"
                    target="_blank">josh-yates</a></aside>
        </nav>
    </header>
    <main class="right-main">
        @RenderBody()
    </main>
</body>

</html>