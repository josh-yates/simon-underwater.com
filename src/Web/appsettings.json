{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Images": {
    "WebImageResizeFactor": 0.25,
    "ThumbnailResizeFactor": 0.1,
    "PermittedExtensions": [
      ".png",
      ".jpg",
      ".jpeg",
      ".tiff",
      ".tif"
    ],
    "WebImagesBaseUrl": "images",
    "ThumbnailsBaseUrl": "images/thumbnails"
  },
  "FileSystem": {
    "UploadsBaseDirectory": "uploads",
    "WebImagesBaseDirectory": "images",
    "ThumbnailsBaseDirectory": "images/thumbnails"
  }
}
